<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:background="@drawable/round_border_gray">
    <TextView
        android:id="@+id/dia_title"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:text="해당 공고를 삭제하시겠습니까?"
        android:textColor="#212529"
        android:textSize="16sp"
        android:gravity="center_vertical|center_horizontal" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dee2e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="취소"
            android:textSize="16sp"
            android:textColor="@color/maincolor"
            android:gravity="center_horizontal|center_vertical"
            android:clickable="true"
            android:focusable="true" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dee2e6"/>
        <TextView
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="확인"
            android:textSize="16sp"
            android:textColor="@color/maincolor"
            android:gravity="center_horizontal|center_vertical"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</LinearLayout>