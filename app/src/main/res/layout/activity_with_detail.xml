<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WithDetailActivity">

    <RelativeLayout
        android:id="@+id/linear_write"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/icon_back_arrow" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/img_thumbnail"
            android:text="공고 정보"
            android:textColor="#212529"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/three_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="16dp"
            android:src="@drawable/icon_three_point" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/linear_write"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWithusDetailThumb"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_main_loading" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp">

                <TextView
                    android:id="@+id/tvWithusDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="UI 디자이너"
                    android:textStyle="bold"
                    android:textColor="#212529"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvWithusDetailStartupname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스타트업 이름"
                    android:textColor="#212529"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvWithusDetailStartupIdx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스타트업 분야"
                    android:textColor="#868e96"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f1f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근무조건"
                    android:textColor="#212529"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="월급"
                        android:textColor="#868e96"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvWithusDetailSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,000,000"
                        android:textColor="#22b573"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="근무지역"
                        android:textColor="#868e96"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvWithusDetailCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마포구"
                        android:textColor="#212529"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f1f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="상세설명"
                    android:textColor="#212529"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="주요업무"
                    android:textColor="#212529"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvWithusDetailMaintask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- UX / UI 디자인 변경 또는 적용"
                    android:textColor="#212529"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#f1f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스타트업 소개"
                    android:textColor="#212529"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvWithusDetailIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="2018년 생존여행가이자 천상 사업가 대표와 막 개발을 접으려던 8년차 풀스택 개발자와 이직을 준비중이던 안드로이드 개발자 세 명이 만나 결성된 팀으로 현재 업력은 2년차이며 스파크랩스, 롯데엑셀러레이터, 미래에셋벤처투자 등에서 시드 투자를 받고 신용보증보험등을 통한 안정적인 자금을 확보한 상태이며 시리즈 A투자를 진행 중에 있습니다. 현재 스파크 플러스 역삼2호점에 입주해 있으며 송파구 부설연구실겸 숙소에서 현재 직면한 시니어 사업의 정보 비대칭 문제 해결을 위한 진지한 하루하루를 보내고 있습니다."
                    android:textColor="#212529"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f1f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:text="스타트업 정보"
                    android:textColor="#212529"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="회사명"
                        android:textColor="#868e96"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvWithusDetailCompanyname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스타트픽"
                        android:textColor="#212529"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:text="분야"
                        android:textColor="#868e96"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvWithusDetailJob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IT"
                        android:textColor="#212529"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="담당자"
                        android:textColor="#868e96"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvWithusDetailManagernm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textColor="#212529"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="연락처"
                        android:textColor="#868e96"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvWithusDetailPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="010-0000-0000"
                        android:textColor="#212529"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="68dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="이메일"
                        android:textColor="#868e96"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvWithusDetailEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="startpick@gamil.com"
                        android:textColor="#212529"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:id="@+id/btn_scrap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#495057" />

            <ImageView
                android:id="@+id/iv_scrap"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/check_icon_wh" />
        </RelativeLayout>


        <TextView
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#22b573"
            android:textStyle="bold"
            android:gravity="center_horizontal|center_vertical"
            android:text="지원하기"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>