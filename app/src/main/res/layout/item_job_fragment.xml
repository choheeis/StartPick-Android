<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--content LinearLayout-->
    <LinearLayout
        android:id="@+id/item_job_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_job_fragment_iv"
            android:layout_width="159dp"
            android:layout_height="89dp"
            android:layout_marginLeft="16dp"
            android:background="#e6e6e6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_job_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textSize="14sp"
                android:textColor="#212529"
                android:text="SNS 콘텐츠 크리에이터"/>
            <TextView
                android:id="@+id/item_job_fragment_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#212529"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="서울시창업지원센터"/>
            <TextView
                android:id="@+id/item_job_fragment_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#868e96"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:text="콘텐츠"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_job_fragment_detail_container"
        android:layout_below="@+id/item_job_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&quot;"
            android:gravity="center_vertical|center_horizontal"/>
        <TextView
            android:id="@+id/item_job_fragment_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="저희 회사는 모두가 의견을 자유롭게 내는 수평적인 조직 구조입니다."
            android:gravity="center_vertical|center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&quot;"
            android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>

    <View
        android:id="@+id/item_job_fragment_divider"
        android:layout_below="@+id/item_job_fragment_detail_container"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f1f1f1"></View>
</RelativeLayout>