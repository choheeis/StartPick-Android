<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.JobFragment">

    <!--title LinearLayout-->
    <RelativeLayout
        android:id="@+id/fragment_job_title_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment_job_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="76dp"
            android:textSize="12sp"
            tools:text="구인구직"
            />

        <!--search-->
        <ImageView
            android:id="@+id/fragment_job_title_iv_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingEnd="12dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_search"
            />
    </RelativeLayout>

    <!--check LinearLayout-->
    <LinearLayout
        android:id="@+id/fragment_job_check_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/fragment_job_title_container"
        android:orientation="horizontal">

        <!--분류인데 일단 이미지로 박아둠-->
        <TextView
            android:id="@+id/fragment_job_check_startup"
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:background="#E6E6E6"
            android:gravity="center_vertical|center_horizontal"
            android:text="스타트업 분야"
            />
        <TextView
            android:id="@+id/fragment_job_check_detail"
            android:layout_width="62dp"
            android:layout_height="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:text="직군"
            android:layout_gravity="center_vertical"
            android:background="#E6E6E6"/>
    </LinearLayout>

    <!--counting LinearLayout-->
    <LinearLayout
        android:id="@+id/fragment_job_counting_container"
        android:layout_below="@+id/fragment_job_check_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#212529"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="전체 128개"/>
        <View
            android:layout_width="284dp"
            android:layout_height="match_parent"/>
        <!--인기순 버튼 일단 텍스트뷰로 나타냄-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#212529"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="인기순"/>
    </LinearLayout>

    <!--recyclerview LinearLayout-->
    <LinearLayout
        android:id="@+id/fragment_job_recyclerview_container"
        android:layout_below="@+id/fragment_job_counting_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_job_recyclerview"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</RelativeLayout>