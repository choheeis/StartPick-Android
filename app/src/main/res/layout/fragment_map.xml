<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.MapFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Toolbar-->
            <RelativeLayout
                android:id="@+id/rl_toolbar_map_frag"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="16dp">

                <!--title_map-->
                <TextView
                    android:id="@+id/tv_seoulstartupmap_map_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="서울창업지도"
                    android:textColor="#212529"
                    android:textSize="16sp" />

                <!--btn search-->
                <ImageView
                    android:id="@+id/btn_search_map_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="20dp"
                    android:src="@drawable/search" />

            </RelativeLayout>

            <!--View-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dee2e6" />

            <!--map-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="지원기관을 테마로 기본적인 정보를 제공하는 창업지도입니다."
                android:textColor="#212529"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="정보를 보고 싶은 지역을 선택해주세요."
                android:textColor="#212529"
                android:textSize="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="24dp"
                android:background="#f4f4f4">
<!--
                <com.isapanah.awesomespinner.AwesomeSpinner
                    android:id="@+id/spinner_mylocation_map_fragment"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:text="내 위치 중심"
                    android:textColor="#212529"
                    android:textSize="12sp" />-->

                <TextView
                    android:id="@+id/tv_address_dnleh_map_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="내주소를 알고싶다!!"/>

                <com.isapanah.awesomespinner.AwesomeSpinner
                    android:id="@+id/spinner_thema_map_fragment"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_address_dnleh_map_fragment"
                    android:text="테마"
                    android:textColor="#212529"
                    android:textSize="12sp" />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_seoul_startup_info_map_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>