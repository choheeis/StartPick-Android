<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WriteActivity">

    <LinearLayout
        android:id="@+id/linear_write"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="글쓰기"
            android:textColor="#212529"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/v_line1"
        android:layout_below="@+id/linear_write"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dee2e6"
        />

    <!-- 모집 내용  -->
    <LinearLayout
        android:id="@+id/linear_recruit_content"
        android:layout_below="@+id/v_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="모집내용"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212529"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모집직무"
                android:textColor="#212529"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="18sp"
                android:textColor="#22b573"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="모집직무 선택해주세요 스피너 달아야함"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세직무"
                android:textSize="16sp"
                android:textColor="#212529"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="18sp"
                android:textColor="#22b573"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="구체적인 포지션을 적어주세요. ex)UI디자이너"
            android:textColor="#868e96"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모집인원"
                android:textSize="16sp"
                android:textColor="#212529"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="18sp"
                android:textColor="#22b573"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="모집인원 선택해주세요 스피너 달아야함"
            android:gravity="center_vertical"/>


    </LinearLayout>
    
    <View
        android:id="@+id/v_line2"
        android:layout_below="@+id/linear_recruit_content"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f1f3f5"/>

    <!-- 근무 조건 -->
    <LinearLayout
        android:id="@+id/linear_jobCondition"
        android:layout_below="@+id/v_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="근무조건"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212529"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월급"
                android:textSize="16sp"
                android:textColor="#212529"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="18sp"
                android:textColor="#22b573"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="급여를 입력해주세요."
            android:textColor="#868e96"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추후협의"
                android:textSize="14sp"
                android:textColor="#212529"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="근무지역"
                android:textSize="16sp"
                android:textColor="#212529"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="18sp"
                android:textColor="#22b573"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="근무지역 선택해주세요 스피너 달아야함"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:id="@+id/v_line3"
        android:layout_below="@+id/linear_jobCondition"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f1f3f5"
        />

    <!-- 상세 설명  -->
    <LinearLayout
        android:id="@+id/linear_detail"
        android:layout_below="@+id/v_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="상세설명"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212529"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주요업무"
            android:textSize="16sp"
            android:textColor="#212529"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="230dp"
            />


    </LinearLayout>
    <View
        android:id="@+id/v_line4"
        android:layout_below="@+id/linear_detail"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f1f3f5"
        />
</RelativeLayout>