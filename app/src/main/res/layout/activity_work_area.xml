<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WithFilter">

    <RelativeLayout
        android:id="@+id/relative_write"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="근무지역"
            android:textColor="#212529"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/icon_back_arrow"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_below="@+id/relative_write"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dee2e6"
        />

    <!-- 스타트업 분야 -->
    <LinearLayout
        android:id="@+id/linear_startup"
        android:layout_below="@+id/relative_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="근무지역"
                android:textSize="16sp"
                android:textColor="#212529"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:text="강남구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border" />
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="강동구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="강북구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:text="강서구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
            </LinearLayout>

            <!-- 두 번째 줄 -->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:text="관악구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="광진구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="구로구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:text="금천구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
            </LinearLayout>

            <!-- 세 번째 줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_9"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:text="노원구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="도봉구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_11"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="동대문구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_12"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:text="동작구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
            </LinearLayout>

            <!-- 네 번째 줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_13"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:text="마포구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_14"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="서대문구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_15"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="서초구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_16"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:text="성동구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
            </LinearLayout>

            <!-- 네 번째 줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_17"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:text="성북구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_18"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="송파구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_19"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="양천구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_20"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="영등포구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_21"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:text="용산구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_22"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="은평구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_23"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="종로구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
                <TextView
                    android:id="@+id/tv_24"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="중구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="8"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_25"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:text="중랑구"
                    android:textSize="14sp"
                    android:textColor="#212529"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/round_border"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#8c8c8c"
        android:text="적용하기"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textSize="17sp"/>
</RelativeLayout>